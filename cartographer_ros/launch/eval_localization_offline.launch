<launch>
  <node name="cartographer_offline_node" pkg="cartographer_ros"
      required="true"
      type="cartographer_offline_node" args="
          -configuration_directory $(find cartographer_ros)/configuration_files
          -configuration_basenames backpack_2d.lua
          -urdf_filenames $(find cartographer_ros)/urdf/backpack_2d.urdf
          -load_state_filename $(env HOME)/Downloads/b2-3-merged.pbstream
          -bag_filenames $(env HOME)/Downloads/b2-2015-04-28-13-01-40.bag
          "
      output="screen">
    <remap from="echoes" to="horizontal_laser_2d" />
  </node>
</launch>
